<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="Thêm công việc" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_themTenCongviec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:endIconMode="clear_text" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/themTenCongViec"
            style="@style/TextStyle"
            android:background="@color/white"
            android:textColor="#0000FF"
            android:hint="Tên công việc" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_themTienLuongCongviec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:endIconMode="clear_text" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/themTienLuongCongviec"
            style="@style/TextStyle"
            android:background="@color/white"
            android:textColor="#0000FF"
            android:hint="Tiền lương"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <Button
        android:id="@+id/btnThemCongViec"
        style="@style/ButtonStyle"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:onClick="themCongViec"
        android:text="Thêm" />

</LinearLayout>


</LinearLayout>